<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link href="Content/app.css" rel="stylesheet" type="text/css" />
	@*<link href="Content/toastr.css" rel="stylesheet" type="text/css"/>*@

	<title>mini spa</title>
</head>
<body>

	<nav id="navigation">
		<ul data-bind="foreach: routes">
			<li>
				<a data-bind="text: title, attr: { href: routePath }"></a>
			</li>
		</ul>
	</nav>

	<div id="content-list">
		<h1>list</h1>
		<ul data-bind="foreach: messages, visible: messages().length > 0">
			<li>
				<div data-bind="css: { read: isRead }">
					<input data-bind="checked: isRead" type="checkbox" />
					<span class="message-subject" data-bind="text: subject"></span>
					<span class="message-body" data-bind="text: body"></span>
				</div>
			</li>
		</ul>
	</div>

	<div id="content-search">
		<input data-bind="value: filter, valueUpdate: 'afterkeydown'" />
		<ul data-bind="foreach: messages, visible: messages().length > 0">
			<li>
				<div>
					<span class="message-subject" data-bind="text: subject"></span>
					<span class="message-body" data-bind="text: body"></span>
				</div>
			</li>
		</ul>
	</div>

	<script src="Scripts/lib/jquery-1.9.1.js"></script>
	<script src="Scripts/lib/knockout-2.2.1.debug.js"></script>
	<script src="Scripts/lib/sammy-0.7.4.js"></script>
	<script src="Scripts/app/config.js"></script>
	<script src="Scripts/app/utils.js"></script>
	<script src="Scripts/app/model.message.js"></script>
	<script src="Scripts/app/modelmapper.js"></script>
	<script src="Scripts/app/router.js"></script>
	<script src="Scripts/app/dataservice.js"></script>
	<script src="Scripts/app/datacontext.js"></script>
	<script src="Scripts/app/vm.search.js"></script>
	<script src="Scripts/app/vm.contentlist.js"></script>
	
	<script src="Scripts/app/binder.js"></script>
	<script src="Scripts/app/bootstrap.js"></script>

</body>
</html>
